{
  "name": "compress-it-desktop",
  "version": "1.0.0",
  "description": "Compress-It Desktop â€” Blazing fast image & video compression. Smarter than HandBrake, easier to use, 100% private.",
  "main": "main.js",
  "author": "Compress-It",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux"
  },
  "dependencies": {
    "sharp": "^0.33.2",
    "fluent-ffmpeg": "^2.1.3",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.compressit.desktop",
    "productName": "Compress-It",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "node_modules/**/*"
    ],
    "asar": true,
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "renderer/assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "renderer/assets/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "renderer/assets/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "installerIcon": "renderer/assets/icon.ico",
      "uninstallerIcon": "renderer/assets/icon.ico"
    },
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static/ffmpeg.exe",
        "to": "ffmpeg.exe",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
