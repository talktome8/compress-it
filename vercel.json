{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/js/(.*)", "dest": "/public/js/$1" },
    { "src": "/css/(.*)", "dest": "/public/css/$1" },
    { "src": "/(.*\\.(html|ico|png|jpg|svg|webp|gif))", "dest": "/public/$1" },
    { "src": "/", "dest": "/public/index.html" }
  ],
  "functions": {
    "api/index.js": {
      "maxDuration": 60
    }
  }
}
}
